<?xml version="1.0" encoding="utf-8"?>
<resources>
    
    <style name="Light" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">#5E38DD</item>
        <item name="coordinatorLayoutStyle">@style/CoordLight</item>
        <item name="materialButtonStyle">@style/ButtonLight</item>
        <item name="android:textColor">#000000</item>
    </style>


    <style name="Dark" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">#232050</item>
        <item name="coordinatorLayoutStyle">@style/CoordDark</item>
        <item name="materialButtonStyle">@style/ButtonDark</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="CoordLight" parent="Widget.Support.CoordinatorLayout">
        <item name="android:background">#AEDDFF</item>
    </style>

    <style name="CoordDark" parent="Widget.Support.CoordinatorLayout">
        <item name="android:background">#124588</item>
    </style>

    <style name="ButtonLight" parent="Widget.MaterialComponents.Button">
        <item name="android:background">#DDEEFF</item>
        <item name="android:textColor">#229933</item>
    </style>

    <style name="ButtonDark" parent="Widget.MaterialComponents.Button">
        <item name="android:background">#225533</item>
        <item name="android:textColor">#ddff99</item>
    </style>
</resources>